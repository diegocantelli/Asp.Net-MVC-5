@model IEnumerable<Vidly2.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if(Model == null)
{
    <div class="jumbotron">
        <p class="text-info">We dont have any customers yet.</p>
    </div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Membership Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@Html.ActionLink(c.Name, "Edit", new { id = c.Id })</td>
                    <td>@c.MembershipType.Name</td>
                </tr>
            }

        </tbody>

    </table>

}

